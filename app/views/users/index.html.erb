<% content_for :css do %>
    <%= stylesheet_link_tag 'users/index' %>
<% end %>

<% provide(:title, 'All users') %>
<h1 class="users_index_title">All users</h1>

<div class="users_container">
	<%= paginate @users %>
	<ul class="users_list">
		<% @users.each do |user| %>
			<li class="user_contents">
				<%= gravatar_for user, size: 50 %>
				<%= link_to user.name, user %>
			</li>
		<% end %>
	</ul>
	<%= paginate @users %>
</div>
