<% content_for :css do %>
    <%= stylesheet_link_tag 'users/show' %>
<% end %>

<% provide(:title, @user.name) %>
<div class="user__container">
  <aside class="col-md-4">
    <section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<div class="user__name-text">
					<%= @user.name %>
				</div>
			</h1>
		</section>
	</aside>
</div>
