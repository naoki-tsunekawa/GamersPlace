<% content_for :css do %>
    <%= stylesheet_link_tag 'users/new' %>
<% end %>

<% provide(:title, 'Sign up') %>
<h1 class="signup_title">Sign up</h1>

<div class="signup_container">
  <div class="signup_form_container">
    <%= form_for(@user) do |f| %>
			<div class="form_common_wrapper form_name">
				<%= f.label :name, class: "label_common" %>
				<%= f.text_field :name, class: "input_common"  %>
			</div>

			<div class="form_common_wrapper orm_email">
				<%= f.label :email, class: "label_common"  %>
				<%= f.email_field :email, class: "input_common"   %>
			</div>

			<div class="form_common_wrapper form_password">
				<%= f.label :password, class: "label_common"  %>
				<%= f.password_field :password, class: "input_common"   %>
			</div>

			<div class="form_common_wrapper form_password_confirmation">
				<%= f.label :password_confirmation, "Confirmation", class: "label_common"  %>
				<%= f.password_field :password_confirmation, class: "input_common"   %>
			</div>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
