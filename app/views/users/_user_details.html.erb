<% content_for :css do %>
    <%= stylesheet_link_tag 'users/user_details' %>
<% end %>

<div class="user__container">
  <aside class="col-md-4">
    <section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<div class="user_name_wrapper">
					<p class="user_name_contents"><%= @user.name %></p>
				</div>
			</h1>
		</section>
		<section class="stats">
      <%= render 'shared/stats' %>
    </section>
		<%= render 'users/follow_form' if logged_in? %>
	</aside>
</div>
