<% content_for :css do %>
    <%= stylesheet_link_tag 'static_pages/home' %>
<% end %>

<% provide(:title) %>
<% if logged_in? %>
	<%# ログイン時 %>
	<div class="home-container">
		<div class="home_user_details_wrapper"><%= render 'users/user_details' %></div>
		<div class="games_container">
			<% if @favorite_list.present? %>
				<%# お気に入りのGameを表示 %>
				<% @favorite_list.each do |game| %>
					<%= render 'shared/game_card', game: game %>
				<% end %>
			<% else %>
				<%# お気に入りのGameが一件も無い場合の表示 %>
				<div class="home_nfavorite_container">
					<div class="home_nfavorite_text">登録されているお気に入りのゲームが一件もありません。</div>
					<div class="home_nfavorite_text">お気に入りのゲームを見つけよう。</div>
					<div><%= link_to "ゲーム一覧へ", games_path, class: "btn filled" %></div>
				</div>
			<% end %>
		</div>
	</div>

<% else %>
	<%# 未ログイン時 %>
	<div class="home-container">
		<div class="bg-container">
			<div class="home_text_container">
				<h1 class="home_text">Gamers Plays</h1>
				<%= link_to "新規登録", signup_path, class: "btn filled" %>
				<div class="home_message_container">
					<p>あなたのお気に入りのゲームを見つけて</p>
					<p>新たな仲間を見つけてみませんか？</p>
				</div>
			</div>
		</div>
	</div>
<% end %>

