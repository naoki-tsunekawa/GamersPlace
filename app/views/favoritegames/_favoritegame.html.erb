<% content_for :css do %>
    <%= stylesheet_link_tag 'favoritegames/favoritegame' %>
<% end %>

<div id="favorite_game">
  <% if !Favoritegame.exists?(user_id: current_user.id, game_id: @game.id) %>
    <%= link_to game_favoritegames_path(@game), method: :post, remote: true, class: "favorite-btn favorite-game" do %>
      <div class="btn btn_favorite">
        <span>お気に入り</span>
        <%= @game.favoritegames.count %>
      </div>
    <% end %>
  <% else %>
    <%= link_to game_favoritegames_path(@game), method: :delete, remote: true, class: "favorite-btn favorite-delete" do %>
      <div class="btn btn_favorite">
        <span>お気に入り解除</span>
        <%= @game.favoritegames.count %>
      </div>
    <% end %>
  <% end %>
</div>
